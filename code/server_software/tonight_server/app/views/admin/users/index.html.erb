<div class="row">
	<div class="col-sm-12">
		<h1>Users</h1>
		<p>Administer the users that are set up with the system</p>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Registered Users
			</div>
			<div class="panel-body table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<td>First Name</td>
							<td>Last Name</td>
							<td>Email</td>
							<td>Delete</td>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><a href="#" id="name" class="editable" data-type="text" data-resource="user" data-name="first_name" data-url="/admin/users/<%= user.id %>" data-original-title="Enter username"><%= user.first_name %></a></td>
								<td><a href="#" id="name" class="editable" data-type="text" data-resource="user" data-name="last_name" data-url="/admin/users/<%= user.id %>" data-original-title="Enter username"><%= user.last_name %></a></td>
								<td><a href="#" id="desc" class="editable" data-type="text" data-resource="user" data-name="desc" data-url="/admin/users/<%= user.id %>" data-original-title="Enter email"><%= user.email %></a></td>
								<td><%= button_to 'X', {:controller => :users, :action => 'destroy', :id => user.id }, :method => :delete, :class => "btn btn-danger btn-circle" %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= paginate @users %>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-6">
		<div class="panel panel-default">
			<div class="panel-heading">
				Add a user
			</div>
			<div class="panel-body">
				<%= form_for :user do |f| %>
				<div class="form-group">
					<%= f.label :first_name %><br />
					<%= f.text_field :first_name,  :class => "form-control" %>
					<%= f.label :last_name %><br />
					<%= f.text_field :last_name,  :class => "form-control" %>
					<%= f.label :email %><br />
					<%= f.text_field :email, :class => "form-control" %>
					<%= f.label :password  %><br />
					<%= f.text_field :password,  :class => "form-control" %>
					</div>
					<button type="submit" class="btn btn-default">Add User</button>
				<% end -%>
				</form>
			</div>

		</div>
	</div>