<div class="row">
	<div class="col-sm-12">
		<h1>Events</h1>
		<p>Administer the events that are set up with the system</p>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Events
			</div>
			<div class="panel-body table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<td>Ref ID</td>
							<td>Name</td>
							<td>Description</td>
							<td style="width: 100px;">Start Time</td>
							<td style="width: 100px;">End Time</td>
							<td>Venue</td>
						</tr>
					</thead>
					<tbody>
						<% @events.each do |event| %>
							<tr>
								<td><%= event.ref_id %></td>
								<td><%= event.name %></td>
								<td><%= event.desc %></td>
								<td><%= event.start_time.strftime "%a %b %y  - %k:%M %P"   %></td>
								<td><%= event.end_time.strftime "%a %b %y  - %k:%M %P"   if event.end_time? %></td>
								<td><%= event.venue.id %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>